<Window x:Class="HowdyHack2019.Participant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HowdyHack2019"
        mc:Ignorable="d"
        Title="Participant" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Background="Silver">
                <Label Content="Welcome!" Foreground="Maroon" FontWeight="Bold" FontSize="25"/>
            </StackPanel>
            <StackPanel>
                <Button x:Name="surveyBtn" Content="Take Survey!" Width="200" Height="110" FontSize="25" FontWeight="ExtraBold" IsEnabled="False" Foreground="Blue" Click="SurveyBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
